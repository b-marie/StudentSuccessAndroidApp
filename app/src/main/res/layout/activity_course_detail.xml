<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:scrollbars="vertical">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="1000dp">

            <TextView
                android:id="@+id/course_detail_course_name"
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="@string/course_name" />

            <TextView
                android:id="@+id/course_detail_status_label"
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_course_name"
                android:layout_centerHorizontal="true"
                android:text="@string/course_status" />

            <TextView
                android:id="@+id/course_detail_status"
                style="@style/Text.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_status_label"
                android:layout_centerHorizontal="true"
                android:text="@string/course_status" />

            <TextView
                android:id="@+id/course_detail_course_dates_label"
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_status"
                android:layout_centerHorizontal="true"
                android:text="@string/course_dates" />

            <TextView
                android:id="@+id/course_detail_course_start_date"
                style="@style/Text.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/course_detail_course_dates_label"
                android:layout_marginStart="82dp"
                android:layout_marginLeft="82dp"
                android:text="@string/start_date" />

            <TextView
                android:id="@+id/course_detail_course_end_date"
                style="@style/Text.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_course_dates_label"
                android:layout_toEndOf="@+id/course_detail_course_start_date"
                android:layout_toRightOf="@+id/course_detail_course_start_date"
                android:text="@string/end_date" />

            <TextView
                android:id="@+id/course_detail_course_mentor_label"
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_course_end_date"
                android:layout_centerHorizontal="true"
                android:text="@string/course_mentor" />


            <LinearLayout
                android:id="@+id/course_detail_mentor_view_layout"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_course_mentor_label"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

            </LinearLayout>

            <Spinner
                android:id="@+id/course_detail_mentor_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_mentor_view_layout"
                android:layout_centerHorizontal="true"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                style="@style/Dropdown"/>


            <Button
                android:id="@+id/course_detail_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/course_detail_home_button"
                android:layout_centerHorizontal="true"
                android:text="@string/edit" />

            <Button
                android:id="@+id/course_detail_add_mentor_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_mentor_list"
                android:layout_centerHorizontal="true"
                android:text="@string/add_mentor" />

            <TextView
                android:id="@+id/course_detail_assessments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Title"
                android:layout_below="@+id/course_detail_add_mentor_button"
                android:layout_centerHorizontal="true"
                android:text="@string/course_assessments" />

            <View
                android:id="@+id/course_detail_assessment_view"
                android:layout_width="189dp"
                android:layout_height="10dp"
                android:layout_below="@+id/course_detail_assessments_label"
                android:layout_centerHorizontal="true" />

            <Spinner
                android:id="@+id/course_detail_assessment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_assessment_view"
                android:layout_centerHorizontal="true"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/course_detail_home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/home" />

            <Button
                android:id="@+id/course_detail_add_assessment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_detail_assessment_list"
                android:layout_centerHorizontal="true"
                android:text="@string/add_assessment" />

            <Button
                android:id="@+id/course_detail_course_notes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/course_detail_edit_button"
                android:layout_centerHorizontal="true"
                android:text="Course Notes" />




        </RelativeLayout>


    </HorizontalScrollView>

</ScrollView>