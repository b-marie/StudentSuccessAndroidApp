<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UpdateMentorActivity"
    android:id="@+id/update_mentor_view">

    <TextView
        android:id="@+id/update_mentor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        style="@style/Text.Title"
        android:text="@string/update_mentor" />

    <EditText
        android:id="@+id/update_mentor_name_entry"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/update_mentor_title"
        android:layout_marginStart="22dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp" />

    <EditText
        android:id="@+id/update_mentor_phone_number_entry"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/update_mentor_title"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />

    <EditText
        android:id="@+id/update_mentor_email_entry"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_mentor_name_entry"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/update_mentor_course_list"
        style="@style/Dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_mentor_save_button"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/update_mentor_course_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_mentor_course_list"
        android:layout_centerHorizontal="true"
        android:text="@string/assign_to_course" />


    <Button
        android:id="@+id/update_mentor_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update_mentor_delete_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/update_mentor" />

    <Button
        android:id="@+id/update_mentor_delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/delete_mentor" />

</RelativeLayout>