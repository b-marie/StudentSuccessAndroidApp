<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CourseNotesActivity">

    <EditText
        android:id="@+id/course_notes_entry"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_notes_title"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/course_notes_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/course_notes" />

    <Button
        android:id="@+id/course_notes_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/course_notes_share_button"
        android:layout_centerHorizontal="true"
        android:text="@string/save" />

    <Button
        android:id="@+id/course_notes_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="@string/share_via_email" />

    <Button
        android:id="@+id/course_notes_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/course_notes_entry"
        android:text="@string/back_to_course"
        android:layout_alignLeft="@+id/course_notes_entry" />

    <Button
        android:id="@+id/course_notes_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="187dp"
        android:text="@string/home"
        android:layout_alignParentRight="true"
        android:layout_marginRight="187dp" />
</RelativeLayout>