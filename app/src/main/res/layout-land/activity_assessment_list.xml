<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AssessmentListActivity">

    <TextView
        android:id="@+id/assessment_list_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="111dp"
        android:text="@string/assessments" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/assessment_list_recycler"
        android:layout_width="329dp"
        android:layout_height="296dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"/>

    <Button
        android:id="@+id/assessment_list_add_assessment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="@string/add_assessment" />

    <Button
        android:id="@+id/assessment_list_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/assessment_list_add_assessment_button"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="@string/home" />

</RelativeLayout>