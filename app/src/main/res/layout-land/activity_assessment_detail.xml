<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AssessmentDetailActivity">

    <TextView
        android:id="@+id/assessment_detail_assessment_name"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/assessment_name" />

    <TextView
        android:id="@+id/assessment_detail_assessment_type_label"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/assessment_detail_assessment_name"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:text="@string/assessment_type" />

    <TextView
        android:id="@+id/assessment_detail_assessment_type"
        style="@style/Text.Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/assessment_detail_assessment_type_label"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="@string/assessment_type" />

    <TextView
        android:id="@+id/assessment_detail_assessment_due_date_label"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/assessment_detail_assessment_name"
        android:text="@string/assessment_due_date" />

    <TextView
        android:id="@+id/assessment_detail_assessment_due_date"
        style="@style/Text.Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/assessment_detail_assessment_type_label"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="@string/assessment_due_date" />

    <TextView
        android:id="@+id/assessment_detail_assessment_course_label"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assessment_detail_assessment_due_date"
        android:layout_centerHorizontal="true"
        android:text="@string/course_name" />

    <Button
        android:id="@+id/assessment_detail_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/assessment_detail_home_button"
        android:layout_alignEnd="@+id/assessment_detail_assessment_due_date"
        android:layout_alignRight="@+id/assessment_detail_assessment_due_date"
        android:text="@string/edit" />

    <Button
        android:id="@+id/assessment_detail_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/assessment_detail_assessment_due_date"
        android:layout_alignRight="@+id/assessment_detail_assessment_due_date"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:text="@string/home" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/assessment_detail_course_recycler_view"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assessment_detail_assessment_course_label"
        android:layout_centerHorizontal="true" />
</RelativeLayout>