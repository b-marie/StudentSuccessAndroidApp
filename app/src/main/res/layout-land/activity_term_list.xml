<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_list_term_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TermListActivity">

    <TextView
        android:id="@+id/term_list_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="154dp"
        android:text="@string/terms"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="154dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/term_list_recycler"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="39dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="39dp" />

    <Button
        android:id="@+id/term_list_add_term_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="58dp"
        android:text="@string/add_term"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp" />

    <Button
        android:id="@+id/term_list_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/term_list_add_term_button"
        android:layout_below="@+id/term_list_add_term_button"
        android:text="@string/home"
        android:layout_alignLeft="@+id/term_list_add_term_button" />





</RelativeLayout>