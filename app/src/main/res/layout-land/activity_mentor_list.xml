<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mentor_list_view"
    tools:context=".view.MentorListActivity">

    <TextView
        android:id="@+id/mentor_list_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:text="@string/mentors"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mentor_list_recycler"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mentor_list_title"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/mentor_list_add_mentor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="131dp"
        android:text="Add Mentor"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp" />

    <Button
        android:id="@+id/mentor_list_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="121dp"
        android:layout_marginEnd="71dp"
        android:text="Home"
        android:layout_alignParentRight="true"
        android:layout_marginRight="71dp" />

</RelativeLayout>